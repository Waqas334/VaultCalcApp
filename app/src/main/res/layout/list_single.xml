<?xml version="1.0" encoding="utf-8"?>
<com.androidbull.calculator.photo.vault.utils.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="15.0dip">

<!--    <ImageView-->
<!--        android:id="@id/img"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentLeft="true" />-->

    <TextView
        android:layout_width="40dp"
        android:gravity="center"
        android:id="@+id/tv_file_type"
        android:layout_height="40dp"
        android:background="@drawable/circle_bg"
        android:textStyle="bold"
        android:text="PDF"
        android:textColor="@color/newColorAccent" />

    <TextView
        android:id="@id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@+id/myCheckBox"
        android:layout_toEndOf="@id/tv_file_type"
        tools:text="Tgus " />

    <CheckBox
        android:id="@+id/myCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        android:theme="@style/CheckboxTheme" />
</com.androidbull.calculator.photo.vault.utils.CheckableRelativeLayout>