<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_picture"
        style="@style/card_style"
        app:layout_constraintBottom_toTopOf="@+id/card_video"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/card_audio"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout style="@style/ll_home_card_style">

            <ImageView
                style="@style/image_view_style_home"
                android:src="@drawable/ic_pictures_svg" />

            <TextView
                style="@style/tv_home_stye"
                android:text="Photos" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_audio"
        style="@style/card_style"
        app:layout_constraintBottom_toTopOf="@+id/card_files"
        app:layout_constraintLeft_toRightOf="@+id/card_picture"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout style="@style/ll_home_card_style">

            <ImageView
                style="@style/image_view_style_home"
                android:src="@drawable/ic_audio_svg" />

            <TextView
                style="@style/tv_home_stye"
                android:text="Audios" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_video"
        style="@style/card_style"
        app:layout_constraintBottom_toTopOf="@+id/card_intruder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/card_files"
        app:layout_constraintTop_toBottomOf="@+id/card_picture">

        <LinearLayout style="@style/ll_home_card_style">


            <ImageView
                style="@style/image_view_style_home"
                android:src="@drawable/ic_videos_svg" />

            <TextView
                style="@style/tv_home_stye"
                android:text="Videos" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_files"
        style="@style/card_style"
        app:layout_constraintBottom_toTopOf="@+id/card_browser"
        app:layout_constraintLeft_toRightOf="@+id/card_video"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_audio">

        <LinearLayout style="@style/ll_home_card_style">

            <ImageView
                style="@style/image_view_style_home"
                android:src="@drawable/ic_files_svg" />

            <TextView
                style="@style/tv_home_stye"
                android:text="Files" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_intruder"
        style="@style/card_style"
        app:layout_constraintBottom_toTopOf="@+id/home_banner_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/card_browser"
        app:layout_constraintTop_toBottomOf="@+id/card_video">

        <LinearLayout style="@style/ll_home_card_style">


            <ImageView
                style="@style/image_view_style_home"
                android:src="@drawable/ic_intruder_svg" />

            <TextView
                style="@style/tv_home_stye"
                android:text="Intruder" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_browser"
        style="@style/card_style"
        app:layout_constraintBottom_toTopOf="@+id/home_banner_container"
        app:layout_constraintLeft_toRightOf="@+id/card_intruder"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_files">

        <LinearLayout style="@style/ll_home_card_style">

            <ImageView
                style="@style/image_view_style_home"
                android:src="@drawable/ic_browser_svg" />

            <TextView
                style="@style/tv_home_stye"
                android:text="Browser" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/home_banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_height="50dp" />


</androidx.constraintlayout.widget.ConstraintLayout>