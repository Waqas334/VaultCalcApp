<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/security"
        app:iconSpaceReserved="false">

        <Preference
            android:key="@string/pref_key_change_password"
            android:title="@string/change_password"
            app:iconSpaceReserved="false" />
        <Preference
            android:key="@string/pref_key_forgot_password"
            android:title="@string/forgot_password"
            app:iconSpaceReserved="false" />
        <Preference
            android:key="@string/pref_key_change_question"
            android:title="@string/change_security_question"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/mroe"
        app:allowDividerAbove="true"
        app:allowDividerBelow="true"
        app:iconSpaceReserved="false">

        <SwitchPreference
            android:key="@string/pref_key_dark_mode"
            android:title="@string/dark_mode"
            app:defaultValue="false"
            app:iconSpaceReserved="false" />

        <SwitchPreference
            android:key="@string/pref_intruder_mode_key"
            android:summary="@string/pref_intruder_mode_summary"
            android:title="@string/pref_intruder_mode_title"
            app:defaultValue="false"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="@string/pref_key_about_us"
            android:title="@string/about_us"
            app:iconSpaceReserved="false" />
        <Preference
            android:key="@string/pref_key_share_app"
            android:title="@string/share_app"
            app:iconSpaceReserved="false" />
        <Preference
            android:key="@string/pref_key_rate_app"
            android:title="@string/rate_app"
            app:iconSpaceReserved="false" />
        <Preference
            android:key="@string/pref_key_privacy_policy"
            android:title="@string/privacy_policy"
            app:iconSpaceReserved="false" />
        <Preference
            android:key="@string/pref_key_contact_us"
            android:title="@string/contact_us"
            app:iconSpaceReserved="false" />


    </PreferenceCategory>


</PreferenceScreen>